<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form" > 
        <h3>Informacion General</h3>

        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
        </div>

        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" placeholder="Nombre Empresa" value="{{vacante.empresa}}" required>
        </div>

        <div class="campo">
            <label for="ubicacion">Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Ej: Chile o Remoto" value="{{vacante.ubicacion}}" required>
        </div>

        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej: 500 USD" value="{{vacante.salario}}" required>
        </div>

        <div class="campo">
            <label for="contrato">Contrato</label>  
                <select name="contrato">
                    {{#tipoContrato vacante.contrato}}
                        <option value="" disabled selected> -- Selecciona --</option>
                        <option value="Freelance">Freelance</option>
                        <option value="Tiempo Completo">Tiempo Completo</option>
                        <option value="Medio Tiempo">Medio Tiempo</option>
                        <option value="Por Proyecto">Por Proyecto</option>
                    {{/tipoContrato}}
                </select>
        </div>

        <h3>Descripcion de Puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <input id="x" type="hidden" value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input="x" ></trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
                {{{html}}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills" >
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>

    </form>

</main>